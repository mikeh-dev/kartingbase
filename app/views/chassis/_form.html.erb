<%= form_with(model: @chassis) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.label :make %>
    <%= f.text_field :make, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :model %>
    <%= f.text_field :model, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :year %>
    <%= f.number_field :year, class: 'form-control' %>
  </div>
   <div class="form-group">
    <%= f.label :chassis_number %>
    <%= f.text_field :number, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :stolen %>
    <%= f.radio_button :stolen, true %> Yes
    <%= f.radio_button :stolen, false %> No
  </div>
  <div class="form-group">
    <%= f.submit yield(:button_text), class: "btn btn-primary submit-button" %>
    <%= link_to "Delete and Back to Index", chassis_index_path, class: "btn btn-danger" %>
  </div>
  
<% end %>