<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="my-0">Chassis'</h1>
    <span class="badge badge-primary">Chassis's Man - this is just a piece of test text</span>
  </div>
  <table class="table table-striped table-hover">
    <thead class="thead-light">
      <tr>
        <th>Chassis</th>
        <th>Make</th>
        <th>Stolen</th>
        <th>Number</th>
        <th>Year</th>
        <th>Owner</th>
      </tr>
    </thead>
    <tbody>
      <% @chassis.each do |chas| %>
        <tr>
          <td><%= chas.make %></td>
          <td><%= chas.model %></td>
          <td><%= content_tag(:span, display_status(chas.stolen), class: "stolen") %></td>
          <td><%= chas.number %></td>
          <td><%= chas.year %></td>
          <td><%= chas.user.name %></td>


            <td class="d-flex justify-content-between">
              <%= link_to "View Chassis", chassis_path(chas), class: "btn btn-success btn-sm mr-2" %>
              <%= link_to "Edit Chassis", edit_chassis_path(chas), class: "btn btn-primary btn-sm mr-2" %>
              <%= link_to "Delete Chassis", chassis_path(chas), method: :delete, data: { "turbo_method": :delete, turbo_confirm: "You Sure?" }, class: "btn btn-danger btn-sm" %>        
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<%= link_to "New Chassis", new_chassis_path, class: "btn btn-success" %>